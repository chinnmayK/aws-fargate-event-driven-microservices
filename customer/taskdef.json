{
    "executionRoleArn": "arn:aws:iam::202533520289:role/ecs_task_execution_role",
    "containerDefinitions": [
        {
            "name": "customer",
            "image": "<IMAGE1_NAME>",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8001,
                    "hostPort": 8001,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                { "name": "PORT", "value": "8001" },
                { "name": "EXCHANGE_NAME", "value": "ONLINE_SHOPPING" }
            ],
            "secrets": [
                {
                    "name": "MONGODB_URI",
                    "valueFrom": "arn:aws:secretsmanager:ap-south-1:202533520289:secret:microservices-secrets-v5:customer_mongodb_uri::"
                },
                {
                    "name": "MSG_QUEUE_URL",
                    "valueFrom": "arn:aws:secretsmanager:ap-south-1:202533520289:secret:microservices-secrets-v5:rabbitmq_uri::"
                },
                {
                    "name": "APP_SECRET",
                    "valueFrom": "arn:aws:secretsmanager:ap-south-1:202533520289:secret:microservices-secrets-v5:app_secret::"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/microservices",
                    "awslogs-region": "ap-south-1",
                    "awslogs-stream-prefix": "customer"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "family": "customer-task"
}